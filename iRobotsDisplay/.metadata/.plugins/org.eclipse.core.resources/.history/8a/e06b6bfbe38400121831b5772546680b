


import java.io.DataInputStream;
import java.io.DataOutputStream;
import java.io.IOException;

import lejos.nxt.Button;

public class Main {
    static volatile boolean stop = false;

    /**
     * @param args
     */
    public static void main(String[] args) {
        
        NXTBee xbee = new NXTBee();
        BluetoothConn blue = new BluetoothConn();
        Thread t = new Thread(xbee);
        t.setDaemon(true);
        t.start();
        
        final DataOutputStream out = new DataOutputStream(xbee.getOutputStream());
        final DataInputStream in = new DataInputStream(xbee.getInputStream());
        
        try {
            out.writeUTF("NXT Joined");
            System.out.println("I joined XBee");
            while(!blue.connect())
            {
            	System.out.println("Connection Bluetooth...");
            }
            System.out.println("I joined Bluetooth");
        } catch (IOException e1) {
            e1.printStackTrace();
        }
        
        Thread rt = new Thread(new Runnable() {

            @Override
            public void run() {
                try {
                    while(!stop) {
                        if(in.available() > 0) {
                            String s = in.readUTF();
                            if(s != null) {
                                System.out.println(s);
                            }
                        }
                    }
                } catch (IOException e) {
                    e.printStackTrace();
                }

            }
        });
        rt.start();
        
        try {
            while(!Button.ESCAPE.isDown()) {
                if(Button.ENTER.isDown()) {
                    out.writeUTF("Button pressed");
                    out.flush();
                }
                while(Button.ENTER.isDown());
            }
            out.writeUTF("NXT left");
            stop = true;
            
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

}
