import java.io.DataInputStream;

import java.util.Date;
import java.io.DataOutputStream;
import java.io.IOException;

import lejos.nxt.Button;

public class Main 
{
	private USBSend usb;
    static volatile boolean stop = false;
    private DataInputStream in;
    private NXTBee xbee;

    public Main()
    {
    	xbee = new NXTBee();
        Thread t = new Thread(xbee);
        t.setDaemon(true);
        t.start();
        
        in = new DataInputStream(xbee.getInputStream());
        
        System.out.println("I joined XBee");
		System.out.println("Connection USB...");
		usb = new USBSend();
		System.out.println("...connected USB :) ");
        
        Thread rt = new Thread(new Runnable() {

            @Override
            public void run() {
                try {
                    while(!stop) 
                    {
                        if(in.available() > 0) 
                        {
                            String s = in.readUTF();
                            if(s != null) 
                            {
                            	//System.out.println(s);
	                            int m = s.indexOf("@");
	                            String checkSum = s.substring(m+1);
	                            int checkBody = s.substring(0,m).hashCode();
	                            String checkString = ""+checkBody;
	                            if(checkSum.equals(checkString))
	                            {
	                            	usb.sendData(s);
	                            	//System.out.println("Yeah check right!");
		                           
	                            }
	                            else
	                            {
	                            	System.out.println("Checksum error");
	                            	in.close();
	                            	in = new DataInputStream(xbee.getInputStream());
	                            }
                            }
                        }
                    }
                } catch (IOException e) {
                    e.printStackTrace();
                }

            }
        });
        rt.start();
        
        while(!Button.ESCAPE.isDown()) {
		    if(Button.ENTER.isDown()) {
		    }
		    while(Button.ENTER.isDown());
		}
		stop = true;
    }
    
    public static void main(String[] args) 
    {
        new Main();        
    }

}
